@model EmployeeViewModel

<form action="/employee/delete" method="post" class="text-center">
    <p class="display-3">Are you sure to delete employee details for @Model.FirstName?</p>
    <input type="hidden" asp-for="Id" />
    <a class="btn btn-success w-25" href="/employee/index"><i class="bi bi-x-circle"></i> Cancel</a>
    <button type="submit" class="btn btn-danger w-25 ms-2"><i class="bi bi-trash3-fill"></i> Delete</button>
</form>
