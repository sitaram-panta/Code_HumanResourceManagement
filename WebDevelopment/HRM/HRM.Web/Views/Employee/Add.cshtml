@using HRM.Models;
@using HRM.Web.Enums;
@model Employee 

@{
    var departments = ViewData["DepartmentList"] as IEnumerable<SelectListItem>;
    var designations = ViewData["DesignationList"] as IEnumerable<SelectListItem>;
}

<h3 class="text-center">New Employee Form</h3>

<form class="row" action="/Employee/Add" method="post" enctype="multipart/form-data">
    <div class="mb-3 col-6">
        <label asp-for="FirstName" class="form-label"></label>
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <input asp-for=FirstName type="text" class="form-control">
    </div>
    <div class="mb-3 col-6">
        <label asp-for=LastName class="form-label"></label>
        <input asp-for=LastName type="text" class="form-control">
    </div>

    <div class="mb-3 col-4">
        <label asp-for=Gender class="form-label"></label>
        <div>
            <div class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Male">
                <label asp-for=Gender class="form-check-label">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Female">
                <label asp-for=Gender class="form-check-label">Female</label>
            </div>
            <div asp-for=Gender class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Others">
                <label asp-for=Gender class="form-check-label">Others</label>
            </div>
        </div>
    </div>
    <div class="mb-3 col-8">
        <label asp-for=Dob class="form-label"></label>
        <input asp-for=Dob type="date" class="form-control">
    </div>

    <div class="mb-3 col-6">
        <label asp-for=Designation class="form-label"></label>
        <select asp-for=DesignationId asp-items=designations class="form-control">
        </select>
    </div>

    <div class="mb-3 col-6">
        <label asp-for=Department class="form-label">Department</label>
        <select asp-for=DepartmentId asp-items=departments class="form-control">
            <option selected>Select Department ...</option>
        </select>
    </div>

    <div class="mb-3 col-6">
        <label asp-for=Address class="form-label"></label>
        <textarea asp-for=Address class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3 col-6">
        <label asp-for=Bio class="form-label"></label>
        <textarea asp-for=Bio class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3 col-12">
        <label asp-for=ProfileImage class="form-label"></label>
        <input asp-for=ProfileImage class="form-control" />
    </div>
    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
</form>
