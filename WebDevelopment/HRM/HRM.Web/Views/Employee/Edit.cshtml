@model EmployeeViewModel

@{
    var departments = ViewData["DepartmentList"] as IEnumerable<SelectListItem>;
    var designations = ViewData["DesignationList"] as IEnumerable<SelectListItem>;
}


<form class="row" action="/Employee/Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3 col-6">
        <label asp-for="FirstName" class="form-label"></label>
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <input asp-for=FirstName type="text" class="form-control">
    </div>
    <div class="mb-3 col-6">
        <label asp-for=LastName class="form-label"></label>
        <input asp-for=LastName type="text" class="form-control">
    </div>

    <div class="mb-3 col-4">
        <label asp-for=Gender class="form-label"></label>
        <div>
            <div class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Male">
                <label asp-for=Gender class="form-check-label">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Female">
                <label asp-for=Gender class="form-check-label">Female</label>
            </div>
            <div asp-for=Gender class="form-check form-check-inline">
                <input asp-for=Gender class="form-check-input" type="radio" value="@Gender.Others">
                <label asp-for=Gender class="form-check-label">Others</label>
            </div>
        </div>
    </div>
    <div class="mb-3 col-8">
        <label asp-for=Dob class="form-label"></label>
        <input asp-for=Dob type="date" class="form-control">
    </div>

    <div class="mb-3 col-6">
        <label asp-for=DesignationTitle class="form-label"></label>
        <select asp-for=DesignationId asp-items=designations class="form-control">
            <option selected>@Model.DesignationTitle</option>
        </select>
        @*<input asp-for=DesignationTitle type="text" class="form-control">*@
    </div>

    <div class="mb-3 col-6">
        <label asp-for=DepartmentName class="form-label">Department</label>
        <select asp-for=DepartmentId asp-items=departments class="form-control">
            <option selected>@Model.DepartmentName</option>
        </select>
        @*<input asp-for=DepartmentName type="text" class="form-control">*@
    </div>

    <div class="mb-3 col-6">
        <label asp-for=Address class="form-label"></label>
        <textarea asp-for=Address class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3 col-6">
        <label asp-for=Bio class="form-label">Bio</label>
        <textarea asp-for=Bio class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3 col-12">
        <label asp-for=ProfileImageName class="form-label"></label>
        <input asp-for=ProfileImageName class="form-control" />
    </div>
    <a class="btn btn-danger w-25" href="/employee/index"><i class="bi bi-x-circle"></i> Cancel</a>
    <button type="submit" class="btn btn-success w-25 ms-2"><i class="bi bi-save"></i> Update</button>
</form>
