@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}
<h1 class="text-center">Index</h1>
<br/>

<table class="table table-striped table-bordered table-responsive mx-auto">
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Established)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Established)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill text-warning"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
